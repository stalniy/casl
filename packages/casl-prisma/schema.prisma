datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator caslAdapter {
  provider = "node generator.js"
}

model User {
  id          Int     @id
  firstName   String
  lastName    String
  age         Int
  posts       Post[]
}

model Post {
  id        Int      @id
  title     String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}
