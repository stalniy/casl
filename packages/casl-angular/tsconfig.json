{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/types",
    "sourceMap": false,
    "declaration": true,
    "module": "es2015",
    "target": "es2015",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noEmitHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": false,
    "skipTemplateCodegen": true,
    "flatModuleId": "@casl/angular"
  }
}
