{
  "name": "@casl/aurelia",
  "version": "0.0.1",
  "description": "Aurelia plugin for CASL which makes it easy to add permissions in any Aurelia application",
  "main": "dist/umd/index.js",
  "module": "index.js",
  "es2015": "dist/es6/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:stalniy/casl.git"
  },
  "nyc": {
    "all": true,
    "cache": true,
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register",
      "./spec/config"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "spec/**/*.spec.js"
    ]
  },
  "scripts": {
    "build.es": "rollup -c ../../tools/rollup.es.js -e aurelia-framework,@casl/ability",
    "build.umd": "rollup -c ../../tools/rollup.umd.js -e aurelia-framework,@casl/ability",
    "build.es5m": "rollup -c ../../tools/rollup.es5m.js -e aurelia-framework,@casl/ability",
    "build": "npm run build.es && npm run build.umd && npm run build.es5m"
  },
  "keywords": [
    "casl",
    "aurelia",
    "access control",
    "authorization",
    "acl",
    "cancan",
    "security",
    "permissions"
  ],
  "author": "Sergii Stotskyi <sergiy.stotskiy@freaksidea.com>",
  "license": "MIT",
  "engines": {
    "npm": "^3.0.0"
  },
  "peerDependencies": {
    "@casl/ability": "^2.0.0-alpha.1",
    "aurelia-binding": "^1.6.0"
  },
  "devDependencies": {
    "@casl/ability": "^2.0.0-alpha.1",
    "aurelia-bootstrapper": "^2.2.0",
    "aurelia-loader-nodejs": "^1.0.1",
    "aurelia-pal-browser": "^1.4.0",
    "aurelia-polyfills": "^1.3.0",
    "aurelia-testing": "^1.0.0-beta.4.0.0"
  }
}
